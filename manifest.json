{
  "manifest_version": 3,
  "name": "Local Focus",
  "version": "0.1.0",
  "description": "Privacy-first Pomodoro timer. No accounts, no tracking, no cloud. Just focus.",
  "action": { 
    "default_popup": "popup.html",
    "default_title": "Local Focus"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": { "service_worker": "sw.js", "type": "module" },
  "options_page": "options.html",
  "permissions": ["storage", "alarms", "declarativeNetRequest", "offscreen", "notifications"],
  "host_permissions": ["<all_urls>"]
}
